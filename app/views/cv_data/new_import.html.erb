<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Import CV Data</h1>
    
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Warning</h3>
          <p class="mt-2 text-sm text-yellow-700">
            Importing will completely replace your current CV data. This action cannot be undone.
            Make sure to export your current data first if you want to keep a backup.
          </p>
        </div>
      </div>
    </div>

    <%= form_with url: import_cv_data_path, local: true, html: { multipart: true } do |form| %>
      <div class="bg-white shadow rounded-lg p-6">
        <div class="mb-4">
          <label for="file" class="block text-sm font-medium text-gray-700 mb-2">
            Select JSON file to import
          </label>
          <%= form.file_field :file, 
              accept: '.json,application/json',
              required: true,
              class: 'block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none' %>
          <p class="mt-1 text-sm text-gray-500">
            Only JSON files exported from this CV builder are supported.
          </p>
        </div>

        <div class="flex gap-4">
          <%= form.submit 'Import CV Data', 
              class: 'bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition',
              data: { confirm: 'Are you sure? This will replace all your current CV data.' } %>
          <%= link_to 'Cancel', root_path, 
              class: 'bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition' %>
        </div>
      </div>
    <% end %>

<div class="mt-6">
  <%= button_to 'Import Demo CV', import_demo_cv_data_path, 
      method: :post, 
      class: 'bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition',
      data: { confirm: 'Are you sure? This will replace all your current CV data with the demo data.' } %>
</div>


    <div class="mt-8 bg-gray-50 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-3">Export Current Data</h2>
      <p class="text-gray-600 mb-4">
        Download your current CV data as a JSON file for backup or transfer.
      </p>
      <%= link_to 'Export CV Data', 
          export_cv_data_path(format: :json), 
          class: 'inline-block bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition' %>
    </div>
  </div>
</div>

