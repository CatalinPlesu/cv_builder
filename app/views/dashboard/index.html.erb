<div class="min-h-screen bg-base-100 p-4">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Quick Stats Section with enhanced styling -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-8">
      <!-- Master CV Stats Card -->
      <div class="card bg-base-100 border border-primary">
        <div class="card-body p-4">
          <div class="flex items-center justify-between mb-4">
            <h3 class="card-title text-primary">Master CV Stats</h3>
            <div class="w-10 h-10 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          <div class="space-y-3">
            <div class="flex justify-between"> 
              <span class="text-base-content/70 text-primary">Total Educations</span>
              <span class="font-bold text-primary"><%= current_user.educations.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-base-content/70 text-primary">Total Projects</span>
              <span class="font-bold text-primary"><%= current_user.projects.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-base-content/70 text-primary">Total Experiences</span>
              <span class="font-bold text-primary"><%= current_user.experiences.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-base-content/70 text-primary">Skill Categories</span>
              <span class="font-bold text-primary"><%= current_user.skill_categories.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-base-content/70 text-primary">Total Skills</span>
              <span class="font-bold text-primary"><%= current_user.skill_categories.joins(:skills).count %></span>
            </div>
          </div>
        </div>
      </div>
      
      <%= render 'info_carousel' %>
      
      <!-- Master CV section with improved styling -->
      <div class="card bg-base-100 border border-secondary lg:col-span-2">
        <div class="card-body p-4">
          <div class="flex items-center justify-between mb-4">
            <h3 class="card-title text-secondary">Master CV</h3>
            <div class="w-10 h-10 flex items-center justify-center">
              <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16l2.879-2.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242zM21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <p class="text-base-content/70 mb-6 text-secondary">Your complete professional profile with all skills, experiences, projects, and education and more.</p>
          <div class="flex gap-4">
            <!-- Manage Data Button -->
            <%= link_to new_import_cv_data_path, class: 'btn btn-outline flex flex-col items-center justify-center w-20 h-20' do %>
              <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              <span class="text-xs">Manage</span>
            <% end %>
            <!-- Open Master CV Button -->
            <%= link_to master_cv_index_path, class: "btn btn-outline flex-1 h-20 border-secondary text-secondary" do %>
              <svg class="w-5 h-5 mr-2 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
              Open Master CV
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <%= render 'templates_section' %>
  </div>
</div>
