<div class="flex min-h-screen bg-gray-50">
  <!-- Sticky Sidebar -->
  <div class="w-64 p-6 bg-white shadow-lg flex flex-col space-y-4 sticky top-6 h-fit self-start">
    <%= link_to "Cancel", master_cv_index_path, class: "px-4 py-2 bg-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition text-center" %>
    <%= button_tag "Save All Tag Assignments", form: "tagging-form", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition" %>
  </div>

  <!-- Main Content -->
  <div class="flex-1 p-6">
    <div class="max-w-6xl mx-auto">
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Assign Tags to CV Items</h1>
        <p class="text-gray-600 mt-2">Select which tags apply to each of your CV items. These tags will be used to generate customized CVs later.</p>
      </div>

      <%= form_with url: item_taggings_path, method: :patch, local: true, id: "tagging-form" do |f| %>
        <!-- Education Section -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b">Education</h2>
          <div class="space-y-4">
            <% @educations.each do |education| %>
              <div class="border rounded-lg p-4 hover:bg-gray-50 transition">
                <div class="flex justify-between items-start mb-3">
                  <div>
                    <h3 class="font-medium text-lg"><%= education.institution %></h3>
                    <p class="text-gray-600"><%= education.degree %></p>
                    <% if education.start_date || education.end_date %>
                      <p class="text-gray-500 text-sm">
                        <%= education.start_date&.strftime("%Y %b") || "?" %> - 
                        <%= education.end_date&.strftime("%Y %b") || "?" %>
                      </p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= education.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <div class="flex flex-wrap gap-2 mt-3">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center">
                      <%= check_box_tag "items[education][#{education.id}][tag_ids][]", tag.id, education.tags.include?(tag), class: "form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300" %>
                      <span class="ml-1.5 text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Experience Section -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b">Experience</h2>
          <div class="space-y-6">
            <% @experiences.each do |experience| %>
              <div class="border rounded-lg p-4 hover:bg-gray-50 transition">
                <div class="flex justify-between items-start mb-3">
                  <div>
                    <h3 class="font-medium text-lg"><%= experience.company %></h3>
                    <p class="text-gray-600"><%= experience.position_title %></p>
                    <% if experience.start_date || experience.end_date %>
                      <p class="text-gray-500 text-sm">
                        <%= experience.start_date&.strftime("%Y %b") || "?" %> - 
                        <%= experience.current ? "Present" : (experience.end_date&.strftime("%Y %b") || "?") %>
                      </p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= experience.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Experience Parent Tags -->
                <div class="flex flex-wrap gap-2 mt-3 pb-3 border-b border-gray-200">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center">
                      <%= check_box_tag "items[experience][#{experience.id}][tag_ids][]", tag.id, experience.tags.include?(tag), class: "form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "experience", parent_id: experience.id } %>
                      <span class="ml-1.5 text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-2 px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700 apply-tags-button"
                        data-parent-type="experience"
                        data-parent-id="<%= experience.id %>">
                  Apply Same Tags to Children
                </button>
                
                <!-- Experience Bullets -->
                <% if experience.experience_bullets.any? %>
                  <div class="ml-4 mt-3 space-y-2">
                    <% experience.experience_bullets.each do |bullet| %>
                      <div class="flex justify-between items-start py-2 border-b border-gray-100 last:border-0">
                        <div class="flex-1">
                          <p class="text-gray-700 text-sm"><%= bullet.content %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <%= bullet.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2 mt-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center">
                            <%= check_box_tag "items[experience_bullet][#{bullet.id}][tag_ids][]", tag.id, bullet.tags.include?(tag), class: "form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "experience", parent_id: experience.id } %>
                            <span class="ml-1.5 text-sm text-gray-700"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Projects Section -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b">Projects</h2>
          <div class="space-y-6">
            <% @projects.each do |project| %>
              <div class="border rounded-lg p-4 hover:bg-gray-50 transition">
                <div class="flex justify-between items-start mb-3">
                  <div>
                    <h3 class="font-medium text-lg"><%= project.name %></h3>
                    <% if project.date.present? %>
                      <p class="text-gray-500 text-sm"><%= project.date %></p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= project.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Project Parent Tags -->
                <div class="flex flex-wrap gap-2 mt-3 pb-3 border-b border-gray-200">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center">
                      <%= check_box_tag "items[project][#{project.id}][tag_ids][]", tag.id, project.tags.include?(tag), class: "form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "project", parent_id: project.id } %>
                      <span class="ml-1.5 text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-2 px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700 apply-tags-button"
                        data-parent-type="project"
                        data-parent-id="<%= project.id %>">
                  Apply Same Tags to Children
                </button>
                
                <!-- Project Bullets -->
                <% if project.project_bullets.any? %>
                  <div class="ml-4 mt-3 space-y-2">
                    <% project.project_bullets.each do |bullet| %>
                      <div class="flex justify-between items-start py-2 border-b border-gray-100 last:border-0">
                        <div class="flex-1">
                          <p class="text-gray-700 text-sm"><%= bullet.content %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <%= bullet.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2 mt-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center">
                            <%= check_box_tag "items[project_bullet][#{bullet.id}][tag_ids][]", tag.id, bullet.tags.include?(tag), class: "form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "project", parent_id: project.id } %>
                            <span class="ml-1.5 text-sm text-gray-700"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Skills Section -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b">Skills</h2>
          <div class="space-y-6">
            <% @skill_categories.each do |category| %>
              <div class="border rounded-lg p-4 hover:bg-gray-50 transition">
                <div class="flex justify-between items-start mb-3">
                  <div>
                    <h3 class="font-medium text-lg"><%= category.name %></h3>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= category.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Category Parent Tags -->
                <div class="flex flex-wrap gap-2 mt-3 pb-3 border-b border-gray-200">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center">
                      <%= check_box_tag "items[skill_category][#{category.id}][tag_ids][]", tag.id, category.tags.include?(tag), class: "form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "skill_category", parent_id: category.id } %>
                      <span class="ml-1.5 text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-2 px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700 apply-tags-button"
                        data-parent-type="skill_category"
                        data-parent-id="<%= category.id %>">
                  Apply Same Tags to Children
                </button>

                <!-- Skills in Category -->
                <% if category.skills.any? %>
                  <div class="ml-4 mt-4 space-y-3">
                    <% category.skills.each do |skill| %>
                      <div class="flex justify-between items-start py-2 border-b border-gray-100 last:border-0">
                        <div class="flex-1">
                          <p class="text-gray-700"><%= skill.name %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <%= skill.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2 mt-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center">
                            <%= check_box_tag "items[skill][#{skill.id}][tag_ids][]", tag.id, skill.tags.include?(tag), class: "form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "skill_category", parent_id: category.id } %>
                            <span class="ml-1.5 text-sm text-gray-700"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mb-24"></div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Handle apply button clicks
    document.querySelectorAll(".apply-tags-button").forEach(button => {
      button.addEventListener("click", function () {
        const parentType = this.dataset.parentType;
        const parentId = this.dataset.parentId;

        // Get selected parent tags
        const parentCheckboxes = document.querySelectorAll(
          `.parent-tag-checkbox[data-parent-type="${parentType}"][data-parent-id="${parentId}"]`
        );

        parentCheckboxes.forEach(parentCheckbox => {
          const tagId = parentCheckbox.dataset.tagId;
          const isChecked = parentCheckbox.checked;

          // Find all child checkboxes with the same tag_id and parent reference
          const childCheckboxes = document.querySelectorAll(
            `.child-tag-checkbox[data-tag-id="${tagId}"][data-parent-type="${parentType}"][data-parent-id="${parentId}"]`
          );

          // Sync parent state to all children
          childCheckboxes.forEach(childCheckbox => {
            const wasChecked = childCheckbox.checked; // Store previous state
            childCheckbox.checked = isChecked;

            // --- Start of Hidden Input Logic ---
            // Ensure the checkbox change is submitted by managing a hidden input
            let hiddenInput = childCheckbox.parentNode.querySelector('input[type="hidden"][name="' + childCheckbox.name + '"][value="' + childCheckbox.value + '"]');

            if (isChecked && !wasChecked) {
              // Checkbox was unchecked, now checked -> Add hidden input if it doesn't exist
              if (!hiddenInput) {
                hiddenInput = document.createElement("input");
                hiddenInput.type = "hidden";
                hiddenInput.name = childCheckbox.name;
                hiddenInput.value = childCheckbox.value;
                childCheckbox.parentNode.appendChild(hiddenInput);
              }
            } else if (!isChecked && wasChecked) {
              // Checkbox was checked, now unchecked -> Remove existing hidden input
              if (hiddenInput) {
                hiddenInput.remove();
              }
            }
            // --- End of Hidden Input Logic ---
          });
        });
      });
    });
  });
</script>
