<div class="flex min-h-screen bg-base-200">
  <!-- Sticky Sidebar -->
  <div class="w-64 p-6 bg-base-100 shadow-xl rounded-r-2xl flex flex-col space-y-4 sticky top-6 h-fit self-start mt-6 ml-6">
    <%= link_to "← Back", master_cv_index_path, class: "px-4 py-3 bg-base-200 text-base-content font-medium rounded-lg hover:bg-base-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-base-300 transition text-center border border-base-300" %>
    <%= button_tag "💾 Save All Tags", form: "tagging-form", class: "px-4 py-3 btn btn-primary rounded-lg transition shadow-lg" %>
  </div>

  <!-- Main Content -->
  <div class="flex-1 p-6">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8 text-center py-6">
        <h1 class="text-3xl font-bold text-base-content mb-2">Tag Your CV Items</h1>
        <p class="text-base-content/70 max-w-2xl mx-auto">Select relevant tags for each CV item. These tags will help generate customized CVs later.</p>
      </div>

      <%= form_with url: item_taggings_path, method: :patch, local: true, id: "tagging-form" do |f| %>
        <!-- Education Section -->
        <div class="bg-base-100 rounded-2xl shadow-lg p-6 mb-8 border border-base-300">
          <div class="flex items-center mb-6 pb-3 border-b border-base-300">
            <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0v6"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-base-content">Education</h2>
          </div>
          <div class="space-y-5">
            <% @educations.each do |education| %>
              <div class="border rounded-xl p-5 hover:shadow-md transition-all duration-200 bg-base-200/30">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="font-bold text-lg text-base-content"><%= education.institution %></h3>
                    <p class="text-base-content/80 font-medium"><%= education.degree %></p>
                    <% if education.start_date || education.end_date %>
                      <p class="text-base-content/60 text-sm mt-1">
                        <%= format_date_range(education.start_date, education.end_date) %>  
                      </p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary">
                      <%= education.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <div class="flex flex-wrap gap-2.5 mt-4">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center bg-base-100 border border-base-300 rounded-lg px-3 py-2 hover:bg-primary/5 transition-colors">
                      <%= check_box_tag "items[education][#{education.id}][tag_ids][]", tag.id, education.tags.include?(tag), class: "checkbox checkbox-primary rounded border-base-300" %>
                      <span class="ml-2 text-sm text-base-content"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Experience Section -->
        <div class="bg-base-100 rounded-2xl shadow-lg p-6 mb-8 border border-base-300">
          <div class="flex items-center mb-6 pb-3 border-b border-base-300">
            <div class="w-10 h-10 rounded-lg bg-secondary/10 flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-base-content">Experience</h2>
          </div>
          <div class="space-y-6">
            <% @experiences.each do |experience| %>
              <div class="border rounded-xl p-5 hover:shadow-md transition-all duration-200 bg-base-200/30">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="font-bold text-lg text-base-content"><%= experience.company %></h3>
                    <p class="text-base-content/80 font-medium"><%= experience.position_title %></p>
                    <% if experience.start_date || experience.end_date %>
                      <p class="text-base-content/60 text-sm mt-1">
                        <%= format_date_range(experience.start_date, experience.end_date) %>  
                      </p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-secondary/10 text-secondary">
                      <%= experience.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Experience Parent Tags -->
                <div class="flex flex-wrap gap-2.5 mt-4 pb-4 border-b border-base-300">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center bg-base-100 border border-base-300 rounded-lg px-3 py-2 hover:bg-secondary/5 transition-colors">
                      <%= check_box_tag "items[experience][#{experience.id}][tag_ids][]", tag.id, experience.tags.include?(tag), class: "checkbox checkbox-secondary rounded border-base-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "experience", parent_id: experience.id } %>
                      <span class="ml-2 text-sm text-base-content"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-4 px-4 py-2 btn btn-accent rounded-lg transition-all shadow-md apply-tags-button"
                        data-parent-type="experience"
                        data-parent-id="<%= experience.id %>">
                  Apply Tags to All Bullet Points
                </button>
                
                <!-- Experience Bullets -->
                <% if experience.experience_bullets.any? %>
                  <div class="ml-2 mt-5 space-y-3">
                    <% experience.experience_bullets.each do |bullet| %>
                      <div class="flex justify-between items-start py-3 border-b border-base-200 last:border-0">
                        <div class="flex-1">
                          <p class="text-base-content"><%= bullet.content %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-success/10 text-success">
                            <%= bullet.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2.5 mt-2 pl-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center bg-base-100 border border-base-300 rounded-lg px-3 py-2 hover:bg-success/5 transition-colors">
                            <%= check_box_tag "items[experience_bullet][#{bullet.id}][tag_ids][]", tag.id, bullet.tags.include?(tag), class: "checkbox checkbox-success rounded border-base-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "experience", parent_id: experience.id } %>
                            <span class="ml-2 text-sm text-base-content"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Projects Section -->
        <div class="bg-base-100 rounded-2xl shadow-lg p-6 mb-8 border border-base-300">
          <div class="flex items-center mb-6 pb-3 border-b border-base-300">
            <div class="w-10 h-10 rounded-lg bg-warning/10 flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-base-content">Projects</h2>
          </div>
          <div class="space-y-6">
            <% @projects.each do |project| %>
              <div class="border rounded-xl p-5 hover:shadow-md transition-all duration-200 bg-base-200/30">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="font-bold text-lg text-base-content"><%= project.name %></h3>
                    <% if project.start_date.present?  || project.end_date.present? %>
                      <p class="text-base-content/60 text-sm mt-1"><%=  format_date_range(project.start_date, project.end_date ) %></p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-warning/10 text-warning">
                      <%= project.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Project Parent Tags -->
                <div class="flex flex-wrap gap-2.5 mt-4 pb-4 border-b border-base-300">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center bg-base-100 border border-base-300 rounded-lg px-3 py-2 hover:bg-warning/5 transition-colors">
                      <%= check_box_tag "items[project][#{project.id}][tag_ids][]", tag.id, project.tags.include?(tag), class: "checkbox checkbox-warning rounded border-base-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "project", parent_id: project.id } %>
                      <span class="ml-2 text-sm text-base-content"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-4 px-4 py-2 btn btn-accent rounded-lg transition-all shadow-md apply-tags-button"
                        data-parent-type="project"
                        data-parent-id="<%= project.id %>">
                  Apply Tags to All Bullet Points
                </button>
                
                <!-- Project Bullets -->
                <% if project.project_bullets.any? %>
                  <div class="ml-2 mt-5 space-y-3">
                    <% project.project_bullets.each do |bullet| %>
                      <div class="flex justify-between items-start py-3 border-b border-base-200 last:border-0">
                        <div class="flex-1">
                          <p class="text-base-content"><%= bullet.content %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-success/10 text-success">
                            <%= bullet.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2.5 mt-2 pl-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center bg-base-100 border border-base-300 rounded-lg px-3 py-2 hover:bg-success/5 transition-colors">
                            <%= check_box_tag "items[project_bullet][#{bullet.id}][tag_ids][]", tag.id, bullet.tags.include?(tag), class: "checkbox checkbox-success rounded border-base-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "project", parent_id: project.id } %>
                            <span class="ml-2 text-sm text-base-content"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Skills Section -->
        <div class="bg-base-100 rounded-2xl shadow-lg p-6 mb-8 border border-base-300">
          <div class="flex items-center mb-6 pb-3 border-b border-base-300">
            <div class="w-10 h-10 rounded-lg bg-success/10 flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-base-content">Skills</h2>
          </div>
          <div class="space-y-6">
            <% @skill_categories.each do |category| %>
              <div class="border rounded-xl p-5 hover:shadow-md transition-all duration-200 bg-base-200/30">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="font-bold text-lg text-base-content"><%= category.name %></h3>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-success/10 text-success">
                      <%= category.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Category Parent Tags -->
                <div class="flex flex-wrap gap-2.5 mt-4 pb-4 border-b border-base-300">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center bg-base-100 border border-base-300 rounded-lg px-3 py-2 hover:bg-success/5 transition-colors">
                      <%= check_box_tag "items[skill_category][#{category.id}][tag_ids][]", tag.id, category.tags.include?(tag), class: "checkbox checkbox-success rounded border-base-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "skill_category", parent_id: category.id } %>
                      <span class="ml-2 text-sm text-base-content"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-4 px-4 py-2 btn btn-accent rounded-lg transition-all shadow-md apply-tags-button"
                        data-parent-type="skill_category"
                        data-parent-id="<%= category.id %>">
                  Apply Tags to All Skills
                </button>

                <!-- Skills in Category -->
                <% if category.skills.any? %>
                  <div class="ml-2 mt-5 space-y-4">
                    <% category.skills.each do |skill| %>
                      <div class="flex justify-between items-start py-3 border-b border-base-200 last:border-0">
                        <div class="flex-1">
                          <p class="text-base-content font-medium"><%= skill.name %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-info/10 text-info">
                            <%= skill.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2.5 mt-2 pl-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center bg-base-100 border border-base-300 rounded-lg px-3 py-2 hover:bg-info/5 transition-colors">
                            <%= check_box_tag "items[skill][#{skill.id}][tag_ids][]", tag.id, skill.tags.include?(tag), class: "checkbox checkbox-info rounded border-base-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "skill_category", parent_id: category.id } %>
                            <span class="ml-2 text-sm text-base-content"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mb-24"></div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Handle apply button clicks
    document.querySelectorAll(".apply-tags-button").forEach(button => {
      button.addEventListener("click", function () {
        const parentType = this.dataset.parentType;
        const parentId = this.dataset.parentId;

        // Get selected parent tags
        const parentCheckboxes = document.querySelectorAll(
          `.parent-tag-checkbox[data-parent-type="${parentType}"][data-parent-id="${parentId}"]`
        );

        parentCheckboxes.forEach(parentCheckbox => {
          const tagId = parentCheckbox.dataset.tagId;
          const isChecked = parentCheckbox.checked;

          // Find all child checkboxes with the same tag_id and parent reference
          const childCheckboxes = document.querySelectorAll(
            `.child-tag-checkbox[data-tag-id="${tagId}"][data-parent-type="${parentType}"][data-parent-id="${parentId}"]`
          );

          // Sync parent state to all children
          childCheckboxes.forEach(childCheckbox => {
            const wasChecked = childCheckbox.checked; // Store previous state
            childCheckbox.checked = isChecked;

            // --- Start of Hidden Input Logic ---
            // Ensure the checkbox change is submitted by managing a hidden input
            let hiddenInput = childCheckbox.parentNode.querySelector('input[type="hidden"][name="' + childCheckbox.name + '"][value="' + childCheckbox.value + '"]');

            if (isChecked && !wasChecked) {
              // Checkbox was unchecked, now checked -> Add hidden input if it doesn't exist
              if (!hiddenInput) {
                hiddenInput = document.createElement("input");
                hiddenInput.type = "hidden";
                hiddenInput.name = childCheckbox.name;
                hiddenInput.value = childCheckbox.value;
                childCheckbox.parentNode.appendChild(hiddenInput);
              }
            } else if (!isChecked && wasChecked) {
              // Checkbox was checked, now unchecked -> Remove existing hidden input
              if (hiddenInput) {
                hiddenInput.remove();
              }
            }
            // --- End of Hidden Input Logic ---
          });
        });
      });
    });
  });
</script>
