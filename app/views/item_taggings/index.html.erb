<div class="flex min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <!-- Sticky Sidebar -->
  <div class="w-64 p-6 bg-white shadow-xl rounded-r-2xl flex flex-col space-y-4 sticky top-6 h-fit self-start mt-6 ml-6">
    <%= link_to "← Back", master_cv_index_path, class: "px-4 py-3 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition text-center border border-gray-200" %>
    <%= button_tag "💾 Save All Tags", form: "tagging-form", class: "px-4 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-medium rounded-lg hover:from-blue-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition shadow-lg" %>
  </div>

  <!-- Main Content -->
  <div class="flex-1 p-6">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8 text-center py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Tag Your CV Items</h1>
        <p class="text-gray-600 max-w-2xl mx-auto">Select relevant tags for each CV item. These tags will help generate customized CVs later.</p>
      </div>

      <%= form_with url: item_taggings_path, method: :patch, local: true, id: "tagging-form" do |f| %>
        <!-- Education Section -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-100">
          <div class="flex items-center mb-6 pb-3 border-b border-gray-200">
            <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0v6"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Education</h2>
          </div>
          <div class="space-y-5">
            <% @educations.each do |education| %>
              <div class="border rounded-xl p-5 hover:shadow-md transition-all duration-200 bg-gray-50/50">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="font-bold text-lg text-gray-800"><%= education.institution %></h3>
                    <p class="text-gray-600 font-medium"><%= education.degree %></p>
                    <% if education.start_date || education.end_date %>
                      <p class="text-gray-500 text-sm mt-1">
                        <%= education.start_date&.strftime("%Y %b") || "?" %> - 
                        <%= education.end_date&.strftime("%Y %b") || "?" %>
                      </p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= education.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <div class="flex flex-wrap gap-2.5 mt-4">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center bg-white border border-gray-200 rounded-lg px-3 py-2 hover:bg-blue-50 transition-colors">
                      <%= check_box_tag "items[education][#{education.id}][tag_ids][]", tag.id, education.tags.include?(tag), class: "form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500 focus:ring-2" %>
                      <span class="ml-2 text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Experience Section -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-100">
          <div class="flex items-center mb-6 pb-3 border-b border-gray-200">
            <div class="w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Experience</h2>
          </div>
          <div class="space-y-6">
            <% @experiences.each do |experience| %>
              <div class="border rounded-xl p-5 hover:shadow-md transition-all duration-200 bg-gray-50/50">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="font-bold text-lg text-gray-800"><%= experience.company %></h3>
                    <p class="text-gray-600 font-medium"><%= experience.position_title %></p>
                    <% if experience.start_date || experience.end_date %>
                      <p class="text-gray-500 text-sm mt-1">
                        <%= experience.start_date&.strftime("%Y %b") || "?" %> - 
                        <%= experience.current ? "Present" : (experience.end_date&.strftime("%Y %b") || "?") %>
                      </p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                      <%= experience.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Experience Parent Tags -->
                <div class="flex flex-wrap gap-2.5 mt-4 pb-4 border-b border-gray-200">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center bg-white border border-gray-200 rounded-lg px-3 py-2 hover:bg-purple-50 transition-colors">
                      <%= check_box_tag "items[experience][#{experience.id}][tag_ids][]", tag.id, experience.tags.include?(tag), class: "form-checkbox h-4 w-4 text-purple-600 rounded border-gray-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "experience", parent_id: experience.id } %>
                      <span class="ml-2 text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-4 px-4 py-2 bg-gradient-to-r from-red-500 to-orange-500 text-white text-sm font-medium rounded-lg hover:from-red-600 hover:to-orange-600 transition-all shadow-md apply-tags-button"
                        data-parent-type="experience"
                        data-parent-id="<%= experience.id %>">
                  Apply Tags to All Bullet Points
                </button>
                
                <!-- Experience Bullets -->
                <% if experience.experience_bullets.any? %>
                  <div class="ml-2 mt-5 space-y-3">
                    <% experience.experience_bullets.each do |bullet| %>
                      <div class="flex justify-between items-start py-3 border-b border-gray-100 last:border-0">
                        <div class="flex-1">
                          <p class="text-gray-700"><%= bullet.content %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <%= bullet.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2.5 mt-2 pl-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center bg-white border border-gray-200 rounded-lg px-3 py-2 hover:bg-green-50 transition-colors">
                            <%= check_box_tag "items[experience_bullet][#{bullet.id}][tag_ids][]", tag.id, bullet.tags.include?(tag), class: "form-checkbox h-4 w-4 text-green-600 rounded border-gray-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "experience", parent_id: experience.id } %>
                            <span class="ml-2 text-sm text-gray-700"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Projects Section -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-100">
          <div class="flex items-center mb-6 pb-3 border-b border-gray-200">
            <div class="w-10 h-10 rounded-lg bg-amber-100 flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Projects</h2>
          </div>
          <div class="space-y-6">
            <% @projects.each do |project| %>
              <div class="border rounded-xl p-5 hover:shadow-md transition-all duration-200 bg-gray-50/50">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="font-bold text-lg text-gray-800"><%= project.name %></h3>
                    <% if project.date.present? %>
                      <p class="text-gray-500 text-sm mt-1"><%= project.date %></p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                      <%= project.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Project Parent Tags -->
                <div class="flex flex-wrap gap-2.5 mt-4 pb-4 border-b border-gray-200">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center bg-white border border-gray-200 rounded-lg px-3 py-2 hover:bg-amber-50 transition-colors">
                      <%= check_box_tag "items[project][#{project.id}][tag_ids][]", tag.id, project.tags.include?(tag), class: "form-checkbox h-4 w-4 text-amber-600 rounded border-gray-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "project", parent_id: project.id } %>
                      <span class="ml-2 text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-4 px-4 py-2 bg-gradient-to-r from-red-500 to-orange-500 text-white text-sm font-medium rounded-lg hover:from-red-600 hover:to-orange-600 transition-all shadow-md apply-tags-button"
                        data-parent-type="project"
                        data-parent-id="<%= project.id %>">
                  Apply Tags to All Bullet Points
                </button>
                
                <!-- Project Bullets -->
                <% if project.project_bullets.any? %>
                  <div class="ml-2 mt-5 space-y-3">
                    <% project.project_bullets.each do |bullet| %>
                      <div class="flex justify-between items-start py-3 border-b border-gray-100 last:border-0">
                        <div class="flex-1">
                          <p class="text-gray-700"><%= bullet.content %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <%= bullet.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2.5 mt-2 pl-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center bg-white border border-gray-200 rounded-lg px-3 py-2 hover:bg-green-50 transition-colors">
                            <%= check_box_tag "items[project_bullet][#{bullet.id}][tag_ids][]", tag.id, bullet.tags.include?(tag), class: "form-checkbox h-4 w-4 text-green-600 rounded border-gray-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "project", parent_id: project.id } %>
                            <span class="ml-2 text-sm text-gray-700"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Skills Section -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-100">
          <div class="flex items-center mb-6 pb-3 border-b border-gray-200">
            <div class="w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Skills</h2>
          </div>
          <div class="space-y-6">
            <% @skill_categories.each do |category| %>
              <div class="border rounded-xl p-5 hover:shadow-md transition-all duration-200 bg-gray-50/50">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="font-bold text-lg text-gray-800"><%= category.name %></h3>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                      <%= category.tags.count %> tags
                    </span>
                  </div>
                </div>
                
                <!-- Category Parent Tags -->
                <div class="flex flex-wrap gap-2.5 mt-4 pb-4 border-b border-gray-200">
                  <% @tags.each do |tag| %>
                    <label class="inline-flex items-center bg-white border border-gray-200 rounded-lg px-3 py-2 hover:bg-emerald-50 transition-colors">
                      <%= check_box_tag "items[skill_category][#{category.id}][tag_ids][]", tag.id, category.tags.include?(tag), class: "form-checkbox h-4 w-4 text-emerald-600 rounded border-gray-300 parent-tag-checkbox", data: { tag_id: tag.id, parent_type: "skill_category", parent_id: category.id } %>
                      <span class="ml-2 text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>

                <!-- Apply to Children Button -->
                <button type="button" class="mt-4 px-4 py-2 bg-gradient-to-r from-red-500 to-orange-500 text-white text-sm font-medium rounded-lg hover:from-red-600 hover:to-orange-600 transition-all shadow-md apply-tags-button"
                        data-parent-type="skill_category"
                        data-parent-id="<%= category.id %>">
                  Apply Tags to All Skills
                </button>

                <!-- Skills in Category -->
                <% if category.skills.any? %>
                  <div class="ml-2 mt-5 space-y-4">
                    <% category.skills.each do |skill| %>
                      <div class="flex justify-between items-start py-3 border-b border-gray-100 last:border-0">
                        <div class="flex-1">
                          <p class="text-gray-700 font-medium"><%= skill.name %></p>
                        </div>
                        <div class="flex items-center space-x-2 ml-4">
                          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <%= skill.tags.count %> tags
                          </span>
                        </div>
                      </div>
                      
                      <div class="flex flex-wrap gap-2.5 mt-2 pl-2">
                        <% @tags.each do |tag| %>
                          <label class="inline-flex items-center bg-white border border-gray-200 rounded-lg px-3 py-2 hover:bg-green-50 transition-colors">
                            <%= check_box_tag "items[skill][#{skill.id}][tag_ids][]", tag.id, skill.tags.include?(tag), class: "form-checkbox h-4 w-4 text-green-600 rounded border-gray-300 child-tag-checkbox", data: { tag_id: tag.id, parent_type: "skill_category", parent_id: category.id } %>
                            <span class="ml-2 text-sm text-gray-700"><%= tag.name %></span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mb-24"></div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Handle apply button clicks
    document.querySelectorAll(".apply-tags-button").forEach(button => {
      button.addEventListener("click", function () {
        const parentType = this.dataset.parentType;
        const parentId = this.dataset.parentId;

        // Get selected parent tags
        const parentCheckboxes = document.querySelectorAll(
          `.parent-tag-checkbox[data-parent-type="${parentType}"][data-parent-id="${parentId}"]`
        );

        parentCheckboxes.forEach(parentCheckbox => {
          const tagId = parentCheckbox.dataset.tagId;
          const isChecked = parentCheckbox.checked;

          // Find all child checkboxes with the same tag_id and parent reference
          const childCheckboxes = document.querySelectorAll(
            `.child-tag-checkbox[data-tag-id="${tagId}"][data-parent-type="${parentType}"][data-parent-id="${parentId}"]`
          );

          // Sync parent state to all children
          childCheckboxes.forEach(childCheckbox => {
            const wasChecked = childCheckbox.checked; // Store previous state
            childCheckbox.checked = isChecked;

            // --- Start of Hidden Input Logic ---
            // Ensure the checkbox change is submitted by managing a hidden input
            let hiddenInput = childCheckbox.parentNode.querySelector('input[type="hidden"][name="' + childCheckbox.name + '"][value="' + childCheckbox.value + '"]');

            if (isChecked && !wasChecked) {
              // Checkbox was unchecked, now checked -> Add hidden input if it doesn't exist
              if (!hiddenInput) {
                hiddenInput = document.createElement("input");
                hiddenInput.type = "hidden";
                hiddenInput.name = childCheckbox.name;
                hiddenInput.value = childCheckbox.value;
                childCheckbox.parentNode.appendChild(hiddenInput);
              }
            } else if (!isChecked && wasChecked) {
              // Checkbox was checked, now unchecked -> Remove existing hidden input
              if (hiddenInput) {
                hiddenInput.remove();
              }
            }
            // --- End of Hidden Input Logic ---
          });
        });
      });
    });
  });
</script>
