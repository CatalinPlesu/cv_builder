<%= render 'section_container',
           heading_text: "Projects",
           heading_color: "purple-500",
           border_color: "purple-500",
           edit_path: edit_projects_path do %>

  <% if @projects.any? %>
    <ul class="space-y-4">
      <% @projects.each do |project| %>
        <li class="border-l-4 border-purple-500 pl-4">
          <div class="flex flex-wrap items-center justify-between">
            <h3 class="font-bold text-gray-900"><%= project.name %></h3>
            <% if project.link.present? %>
              <a href="<%= project.link %>" target="_blank" class="text-purple-600 hover:text-purple-800 text-sm underline">
                <i class="fas fa-external-link-alt mr-1"></i>
                <%= project.link_title.presence || "View Project" %>
              </a>
            <% end %>
          </div>
          <% if project.date.present? %>
            <p class="text-sm text-gray-500 mt-1"><%= project.date %></p>
          <% end %>
          <% if project.project_bullets.any? %>
            <ul class="list-disc ml-5 mt-2 text-gray-700">
              <% project.project_bullets.each do |bullet| %>
                <li><%= bullet.content %></li>
              <% end %>
            </ul>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500 italic">No projects added yet.</p>
  <% end %>
<% end %>
