<%= render 'section_container',
           heading_text: "Projects",
           edit_path: edit_projects_path do %>

  <% if @projects.any? %>
    <ul class="space-y-4">
      <% @projects.each do |project| %>
        <li class="border-l-4 border-secondary pl-4">
          <div class="flex flex-wrap items-center justify-between">
            <h3 class="font-bold text-base-content"><%= project.name %></h3>
            <% if project.link.present? %>
              <a href="<%= project.link %>" target="_blank" class="link link-secondary text-sm">
                <i class="fas fa-external-link-alt mr-1"></i>
                <%= project.link_title.presence || "View Project" %>
              </a>
            <% end %>
          </div>
          <p class="text-sm text-base-content/60">
            <%= project.start_date.strftime("%b %Y") if project.start_date %> â€“
            <%= project.end_date ? project.end_date.strftime("%b %Y") : "Present" %>
          </p>
          <% if project.project_bullets.any? %>
            <ul class="list-disc ml-5 mt-2 text-base-content/90">
              <% project.project_bullets.each do |bullet| %>
                <li><%= bullet.content %></li>
              <% end %>
            </ul>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-base-content/60 italic">No projects added yet.</p>
  <% end %>
<% end %>
