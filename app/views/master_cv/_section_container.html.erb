<!-- app/views/.../_section_container.html.erb -->
<div class="max-w-4xl mx-auto p-6">
  <div class="border border-<%= border_color || 'blue-500' %> rounded-lg p-4 mb-6 bg-white">
    <!-- Heading with colored background and Edit button -->
    <div class="bg-<%= heading_color || 'blue-500' %> text-white py-2 px-4 rounded-t-md mb-4 flex justify-between items-center">
      <h2 class="text-lg font-semibold"><%= heading_text || 'Heading' %></h2>
      <% if local_assigns[:edit_path] %>
        <%= link_to "Edit", edit_path, class: "bg-yellow-400 hover:bg-yellow-500 text-gray-800 font-medium py-1 px-3 rounded flex items-center transition-colors duration-200" %>
      <% end %>
    </div>

    <!-- Render the enclosed content -->
    <%= yield %>
  </div>
</div>
