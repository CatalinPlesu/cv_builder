<div class="max-w-4xl mx-auto p-6">
  <div class="border border-base-300 rounded-lg p-4 mb-6 bg-base-100">
    <!-- Heading with colored background and Edit button -->
    <div class="bg-primary text-primary-content py-2 px-4 rounded-t-md mb-4 flex justify-between items-center">
      <h2 class="text-lg font-semibold"><%= heading_text || 'Heading' %></h2>
      <% if local_assigns[:edit_path] %>
        <%= link_to "Edit", edit_path, class: "btn btn-outline btn-sm" %>
      <% end %>
    </div>

    <!-- Render the enclosed content -->
    <%= yield %>
  </div>
</div>
