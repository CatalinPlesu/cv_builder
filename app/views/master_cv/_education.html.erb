<!-- Education Section -->
<%= render 'section_container',
           heading_text: "Education",
           edit_path: edit_educations_path do %>

  <% if @educations.any? %>
    <ul class="space-y-6">
      <% @educations.each do |edu| %>
        <li class="border-l-4 border-primary pl-4 py-2">
          <h3 class="font-semibold text-lg text-base-content"><%= edu.institution %></h3>
          <p class="text-base-content/80"><%= edu.degree %></p>
          <p class="text-sm text-base-content/60">
            <%= edu.location %> •
            <%= edu.start_date.strftime("%b %Y") if edu.start_date %> –
            <%= edu.end_date ? edu.end_date.strftime("%b %Y") : "Present" %>
          </p>
          <% if edu.gpa.present? %>
            <p class="text-sm text-base-content/60">GPA: <%= edu.gpa %></p>
          <% end %>
          
          <!-- Education Bullets -->
          <% if edu.education_bullets.any? %>
            <ul class="mt-2 space-y-1">
              <% edu.education_bullets.order(:position).each do |bullet| %>
                <li class="flex items-start">
                  <span class="text-base-content/50 mr-2">•</span>
                  <span class="text-base-content/90"><%= bullet.content %></span>
                </li>
              <% end %>
            </ul>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-base-content/60 italic">No education entries added yet.</p>
  <% end %>

<% end %>
