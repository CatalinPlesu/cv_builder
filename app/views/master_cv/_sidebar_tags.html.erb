<div class="w-64 bg-base-100 border-r border-base-300 min-h-screen p-4 shadow-sm">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-lg font-semibold text-base-content">Tags</h3>
    <%= link_to "Edit Tags", edit_tags_path, class: "text-sm link link-primary" %>
  </div>

  <ul class="space-y-3">
    <% @tags.each do |tag| %>
      <li class="flex items-center justify-between p-2 rounded hover:bg-base-200 transition">
        <!-- Tag Name -->
        <span class="text-base-content text-sm"><%= tag.name %></span>

        <!-- Color Preview Swatch -->
        <div class="flex items-center">
          <span class="inline-block w-4 h-4 rounded-full mr-2 border border-base-300" style="background-color: <%= tag.color %>;"></span>
          <span class="text-xs text-base-content/60 font-mono"><%= tag.color %></span>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="mt-6 pt-4 border-t border-base-300">
    <%= link_to "Tags to Items", item_taggings_path, class: "w-full flex items-center justify-center px-4 py-2 btn btn-primary btn-sm" %>
  </div>
</div>
