<div class="w-64 bg-white border-r border-gray-200 min-h-screen p-4 shadow-sm">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-lg font-semibold text-gray-800">Tags</h3>
    <%= link_to "Edit Tags", edit_tags_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
  </div>

  <ul class="space-y-3">
    <% @tags.each do |tag| %>
      <li class="flex items-center justify-between p-2 rounded hover:bg-gray-50 transition">
        <!-- Tag Name -->
        <span class="text-gray-700 text-sm"><%= tag.name %></span>

        <!-- Color Preview Swatch -->
        <div class="flex items-center">
          <span class="inline-block w-4 h-4 rounded-full mr-2 border border-gray-300" style="background-color: <%= tag.color %>;"></span>
          <span class="text-xs text-gray-500 font-mono"><%= tag.color %></span>
        </div>
      </li>
    <% end %>
  </ul>
</div>
