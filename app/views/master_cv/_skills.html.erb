<%= render 'section_container',
           heading_text: "Skills",
           heading_color: "pink-500",
           border_color: "pink-500",
           edit_path: edit_skills_path do %>

  <% if @skill_categories.any? %>
    <div class="space-y-3">
      <% @skill_categories.each do |category| %>
        <% if category.skills.any? %>
          <div>
            <h3 class="font-bold text-gray-900 mb-1"><%= category.name %></h3>
            <div class="flex flex-wrap gap-2">
              <% category.skills.each do |skill| %>
                <span class="inline-block bg-pink-100 text-pink-800 text-xs px-2 py-1 rounded-full">
                  <%= skill.name %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 italic">No skills added yet.</p>
  <% end %>
<% end %>
